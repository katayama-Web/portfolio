<h2 class = "text-center">いいねした投稿</h2>
<div class = "container">
  <div class = "row">
    <div class = "col-lg-12 text-center">
<% @favorites.each do |favorite|%>
<div class = "h4">
  <% if favorite.post.user.profile_image.attached? %>
    <%= image_tag(favorite.post.user.profile_image, size: "100x100") %>
  <% else %>
    <%= image_tag(asset_path('noimage.png'), size: "100x100") %>
  <% end %><%= favorite.post.user.name %></div>
  <div><%= link_to image_tag(favorite.post.post_image, size: "300x200"), post_path(favorite.post.id) %></div>
  <div class = "h3"><%= favorite.post.title %></div>
  <p><%= link_to "#{favorite.post.post_comments.count} コメント", post_path(favorite.post.id) %></p>
<% end %>
</div>
</div>
</div>