<h2>いいねした投稿</h2>
<% @favorites.each do |favorite|%>
  <div><%= favorite.post.title %></div>
  <div><%= link_to image_tag(favorite.post.post_image, size: "200x200"), post_path(favorite.post.id) %></div>
  <p><%= link_to "#{favorite.post.post_comments.count} コメント", post_path(favorite.post.id) %></p>
<% end %>