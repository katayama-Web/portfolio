<h2 class = "text-center">非公開にした投稿</h2>
<div class = "container">
  <div class = "row">
    <div class = "col-lg-12 text-center">
<!-- 投稿一覧部分 -->
<% @posts.each do |post| %>
  <div class = "h4 "><%= post.title %></div>
  <div><%= link_to image_tag(post.post_image, size: "200x200"), post_path(post.id) %></div>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
<% end %>
</div>
</div>
</div>