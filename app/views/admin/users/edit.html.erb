ユーザー管理画面
<%= form_with model: @user, url: admin_user_path do |f| %>

  <h4>ユーザーネーム</h4>
  <%= f.text_field :name %>

  <h4>自己紹介</h4>
  <%= f.text_area :introduction %>

   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <tr>
		<td><%= f.label :is_deleted_, "ユーザーステータス" %></td>
	　	<td class="select_field">
		    <%= f.radio_button :is_deleted, true %>
			  <%= f.label :is_deleted, "有効", class: "text-active" %>
				<%= f.radio_button :is_deleted, false %>
				<%= f.label :is_deleted, "退会", class: "text-invalid" %>
			</td>
	</tr>


  <%= f.submit '保存' %>

<% end %>