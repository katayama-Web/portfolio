 <h2>検索結果 "<%= @keyword %>"</h2>
  <ul>
<table>
          <tbody>
            <tr class="item-box">
              <% @posts.each do |post| %>
                <td class="item">
                  <div class = "h2">
                    <% if post.user.profile_image.attached? %>
                      <%= image_tag(post.user.profile_image, class: "rounded-circle", size: "100x100") %>
                    <% else %>
                      <%= image_tag(asset_path('noimage.png'), class: "rounded-circle", size: "100x100") %>
                    <% end %><%= post.user.name %>
                  </div>
                  <div><%= link_to image_tag(post.post_image, size: "300x200"), post_path(post.id) %></div>
                  <div class = "h3"><%= post.title %></div>
                  <p class = "text-center"><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
  </ul>