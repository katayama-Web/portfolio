    <div class="item-index">
    <h3>ジャンル:<%= @genre.name %>の投稿一覧</h3>
        <table>
          <tbody>
            <tr class="item-box">
              <% @genre.posts.each do |post| %>
                <td class="item">
                  <div class = "h2">
                    <% if post.user.profile_image.attached? %>
                      <%= image_tag(post.user.profile_image, size: "100x100") %>
                    <% else %>
                      <%= image_tag(asset_path('noimage.png'), size: "100x100") %>
                    <% end %><%= post.user.name %>
                  </div>
                  <div><%= link_to image_tag(post.post_image, size: "300x200"), post_path(post.id) %></div>
                  <div class = "h3"><%= post.title %></div>
                  <p class = "text-center"><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
</div>
